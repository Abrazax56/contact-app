<div class="comtainer mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form to edit contact</h2>
      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
       <ul>
       <% errors.forEach(error => { %>
       <li><%= error.msg %></li>
       <% }) %>
       </ul>
      </div>
      <% } %>
      
      <form method="post" action="/contact/update" class="mt-3">
        <input type="hidden" name="oldName" value="<%= contact.oldName || contact.name %>"/>
        <div class="mb-3">
          <label for="name" class="form-label">full name</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= contact.name %>" required/>
        </div>
        <div class="mb-3">
          <label for="phonenumber" class="form-label">phone number</label>
          <input type="text" class="form-control" id="phonenumber" name="phonenumber" value="<%= contact.phonenumber %>" required/>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">email</label>
          <input type="email" class="form-control" id="email" name="email" value="<%= contact.email %>"  required/>
        </div>
        <button type="submit" class="btn btn-primary">edit</button>
      </form>
    </div>
  </div>
</div>